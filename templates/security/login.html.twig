{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="ui vertical stripe segment inverted" style="padding-top: 6em;padding-bottom: 6em; margin: 0 0 4em 0em;">
        <div class="ui middle aligned stackable grid container">
            <div class="row">
                <div class="six wide right  column">
                    <img src={{ asset('img/i1.png') }} class="ui large image">
                </div>
                <div class="eight wide column">
                    <form method="post" class="ui form inverted ">

                        {% if app.user %}
                            <div class="ui ignored visible success message">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% else %}
                            {% if error %}
                                <div class="ui ignored error visible message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

                        <div class="field">
                            <label>Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                        </div>
                        <div class="field">
                            <label>Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="inline field inverted">
                            <div class="ui checkbox">
                            </div>
                        </div>
                        <div class="inline field">
                            <div class="ui  checkbox">
                                <input type="checkbox" name="_remember_me" tabindex="0" class="hidden">
                                <label class=" white">Remember me</label>
                            </div>
                        </div>
                        <input type="submit" class="ui submit button" value="Sign in">
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
